<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="@dimen/listItemHeight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Small Text"
            android:id="@+id/datetime"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/textSeverity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView android:id="@+id/textSeverity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Severity"
            android:textSize="@dimen/largeText" />
    </RelativeLayout>


    <TextView android:id="@+id/textBody"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Some sample body text here which isn't too long but allows us to render the view"
        android:textColor="@color/green"/>

</LinearLayout>